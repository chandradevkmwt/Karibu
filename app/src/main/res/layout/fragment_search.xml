<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.doomshell.karibu.Search">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        android:gravity="center">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/Basecolorbtn"
            android:padding="@dimen/activity_horizontal_margin_double_half">

            <android.support.v7.widget.SearchView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:queryHint="Search"
                app:defaultQueryHint="Search"
                android:iconifiedByDefault="true"
                android:foregroundTint="#fff"
                android:layout_marginLeft="@dimen/activity_horizontal_margin_double"
                android:layout_marginRight="@dimen/activity_horizontal_margin_double"
                android:layout_centerInParent="true"
                android:background="@drawable/border_search"></android.support.v7.widget.SearchView>

        </RelativeLayout>

        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="10"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.70"
            android:background="@color/Basecolorbtn">

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="3">

                <RadioButton
                    android:id="@+id/radio_first"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/radio_txt_color"
                    android:button="@null"
                    android:gravity="center"
                    android:padding="@dimen/activity_horizontal_margin_double_half"
                    android:text="Restaurant"
                    android:fontFamily="sans-serif"
                    android:textColor="#ffffff" />

                <RadioButton
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/radio_txt_color"
                    android:button="@null"
                    android:checked="false"
                    android:gravity="center"
                    android:padding="@dimen/activity_horizontal_margin_double_half"
                    android:text="Grocery"
                    android:textColor="#ffffff"
                    android:fontFamily="sans-serif" />

                <RadioButton
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/radio_txt_color"
                    android:button="@null"
                    android:checked="false"
                    android:gravity="center"
                    android:padding="@dimen/activity_horizontal_margin_double_half"
                    android:fontFamily="sans-serif"
                    android:text="Annonces"
                    android:textColor="#ffffff" />

            </RadioGroup>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:weightSum="1"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".6"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:fontFamily="sans-serif"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rating"
                    android:textColor="#000000"
                    android:layout_margin="@dimen/activity_horizontal_margin_double_half"
                    android:gravity="left"/>

            <RatingBar
                style="?android:attr/ratingBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="5"
                android:rating="5"
                android:stepSize="1"
                android:layout_margin="@dimen/activity_horizontal_margin_double_half"
                android:theme="@style/RatingBar" />



            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".4"
                android:background="@drawable/button_border"
                android:layout_margin="@dimen/activity_horizontal_margin_half"
                android:orientation="horizontal">

                <TextView
                    android:fontFamily="sans-serif"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/activity_horizontal_margin_double_half"
                    android:background="#fff"
                    android:gravity="center"
                    android:textAllCaps="false"
                    android:text="Select All" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="#fff"
                android:layout_weight="8.30"
                android:orientation="vertical"
                android:weightSum="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".5"
                android:weightSum="1">

                <LinearLayout
                    android:id="@+id/search1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.50"
                    android:orientation="vertical"
                    android:padding="@dimen/activity_horizontal_margin_double_half">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.50"
                        android:orientation="vertical">

                        <ImageView
                            android:padding="@dimen/activity_horizontal_margin_half"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/dominos_logo" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.50"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Dominos"
                            android:fontFamily="sans-serif"
                            android:textColor="#000"
                            android:textStyle="normal" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:fontFamily="sans-serif"
                            android:text="Indian, International"
                            android:textColor="#000"
                            android:textSize="10sp"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:src="@drawable/scootersmall" />

                            <TextView
                                android:fontFamily="sans-serif"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="@dimen/activity_horizontal_margin_half"
                                android:gravity="right|center"
                                android:text="Free"
                                android:textColor="#868282"
                                android:textSize="10sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:orientation="horizontal">

                            <RatingBar
                                style="?android:attr/ratingBarStyleSmall"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center_vertical"
                                android:numStars="5"
                                android:rating="5"
                                android:textColor="#000" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/search2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.50"
                    android:orientation="vertical"
                    android:padding="@dimen/activity_horizontal_margin_double_half">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.50"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_margin="@dimen/activity_horizontal_margin_half"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/kfc_logo" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.50"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Dominos"
                            android:fontFamily="sans-serif"
                            android:textColor="#000"
                            android:textStyle="normal" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:fontFamily="sans-serif"
                            android:text="Indian, International"
                            android:textColor="#000"
                            android:textSize="10sp"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:src="@drawable/scootersmall" />

                            <TextView
                                android:fontFamily="sans-serif"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="@dimen/activity_horizontal_margin_half"
                                android:gravity="right|center"
                                android:text="Free"
                                android:textColor="#868282"
                                android:textSize="10sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:orientation="horizontal">

                            <RatingBar
                                style="?android:attr/ratingBarStyleSmall"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center_vertical"
                                android:numStars="5"
                                android:rating="5"
                                android:textColor="#000" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/search3"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".5"
                android:weightSum="1">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.50"
                    android:orientation="vertical"
                    android:padding="@dimen/activity_horizontal_margin_double_half">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.50"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_margin="@dimen/activity_horizontal_margin_half"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/kfc_logo" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.50"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Dominos"
                            android:fontFamily="sans-serif"
                            android:textColor="#000"
                            android:textStyle="normal" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:fontFamily="sans-serif"
                            android:text="Indian, International"
                            android:textColor="#000"
                            android:textSize="10sp"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:src="@drawable/scootersmall" />

                            <TextView
                                android:fontFamily="sans-serif"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="@dimen/activity_horizontal_margin_half"
                                android:gravity="right|center"
                                android:text="Free"
                                android:textColor="#868282"
                                android:textSize="10sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:orientation="horizontal">

                            <RatingBar
                                style="?android:attr/ratingBarStyleSmall"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center_vertical"
                                android:numStars="5"
                                android:rating="5"
                                android:textColor="#000" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>

        </LinearLayout>


    </LinearLayout>
</LinearLayout>
