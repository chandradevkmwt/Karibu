<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.doomshell.karibu.Search">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        android:gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/Basecolorbtn"
            android:weightSum="1"
            android:orientation="horizontal"
            android:padding="@dimen/activity_horizontal_margin_double_half">

            <android.support.v7.widget.SearchView
                android:id="@+id/search_sb"
                android:layout_weight="0.70"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:queryHint="Search"
                app:defaultQueryHint="Search"
                android:iconifiedByDefault="true"
                android:foregroundTint="#fff"
                app:iconifiedByDefault="true"
                android:layout_centerInParent="true"
                android:background="@drawable/border_search"/>

            <Button
                android:id="@+id/search_find"
                android:layout_width="0dp"
                android:layout_weight="0.30"
                android:layout_height="wrap_content"
                android:background="@drawable/button_border"
                android:text="Find"
                android:textColor="@color/Basecolorbtn"/>

        </LinearLayout>

        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="10"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.70"
            android:background="@color/Basecolorbtn">

            <RadioGroup
                android:id="@+id/search_rg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="3">

                <RadioButton
                    android:id="@+id/radio_first"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/radio_txt_color"
                    android:button="@null"
                    android:gravity="center"
                    android:padding="@dimen/activity_horizontal_margin_double_half"
                    android:text="Restaurant"
                    android:fontFamily="sans-serif"
                    android:textColor="#ffffff" />

                <RadioButton
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/radio_txt_color"
                    android:button="@null"
                    android:checked="false"
                    android:gravity="center"
                    android:padding="@dimen/activity_horizontal_margin_double_half"
                    android:text="Grocery"
                    android:textColor="#ffffff"
                    android:fontFamily="sans-serif" />

                <RadioButton
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/radio_txt_color"
                    android:button="@null"
                    android:checked="false"
                    android:gravity="center"
                    android:padding="@dimen/activity_horizontal_margin_double_half"
                    android:fontFamily="sans-serif"
                    android:text="Annonces"
                    android:textColor="#ffffff" />

            </RadioGroup>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:weightSum="1"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".6"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:fontFamily="sans-serif"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rating"
                    android:textColor="#000000"/>

            <RatingBar
                android:id="@+id/search_ratingBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/activity_horizontal_margin_double_half"
                style="?android:attr/ratingBarStyleSmall"
                android:numStars="5"
                android:stepSize=".5"
                android:isIndicator="false"
                android:theme="@style/RatingBar" />



            </LinearLayout>

            <LinearLayout
                android:id="@+id/kitchentype_linearLayout"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".4"
                android:background="@drawable/button_border"
                android:layout_margin="@dimen/activity_horizontal_margin_half"
                android:orientation="horizontal">

                <Spinner
                    android:layout_margin="2dp"
                    android:id="@+id/search_ktype_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"></Spinner>


            </LinearLayout>
<!--            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".4"
                android:background="@drawable/button_border"
                android:layout_margin="@dimen/activity_horizontal_margin_half"
                android:orientation="horizontal">

                <TextView
                    android:fontFamily="sans-serif"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/activity_horizontal_margin_double_half"
                    android:background="#fff"
                    android:gravity="center"
                    android:textAllCaps="false"
                    android:text="Select All" />

            </LinearLayout>-->

        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="#fff"
                android:layout_weight="8.30"
                android:orientation="vertical"
                android:weightSum="1">
            <ImageView
                android:id="@+id/no_found_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/notfound"
                android:visibility="gone"/>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/search_recycler"
                android:layout_width="match_parent"
                android:layout_height="match_parent"></android.support.v7.widget.RecyclerView>


        </LinearLayout>


    </LinearLayout>
</LinearLayout>
