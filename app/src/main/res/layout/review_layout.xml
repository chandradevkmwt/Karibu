<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


        <LinearLayout
            android:padding="5dip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/activity_horizontal_margin_double_half"
            android:layout_marginBottom="@dimen/activity_horizontal_margin_double_half"
            android:layout_marginLeft="@dimen/activity_horizontal_margin_double_half"
            android:layout_marginRight="@dimen/activity_horizontal_margin_double_half"
            android:weightSum="1">

            <RelativeLayout
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight=".20"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_centerHorizontal="true"
                    android:id="@+id/user_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/user"/>

                <TextView
                    android:layout_centerHorizontal="true"
                    android:id="@+id/r_name"
                    android:layout_below="@id/user_img"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Order"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/activity_horizontal_margin_double_half"
                    android:textColor="@color/Basecolorbtn"
                    android:fontFamily="sans-serif-thin"
                    android:textStyle="bold"/>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight=".80"
                android:layout_marginLeft="@dimen/activity_horizontal_margin_double_half"
                android:layout_gravity="center_vertical"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight=".3"
                    android:weightSum="1">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginTop="@dimen/activity_horizontal_margin_double_half"
                    android:textSize="12sp"
                    android:text="Orderjfbjgkbdfkjgbdkghghgjbdkghghgjhgjhgjhghjgjhgjghjghjggyuytyubdkghghgjhgjhgjhghjgjhgjghjghjggyuytyubdkghghgjhgjhgjhghjgjhgjghjghjggyuytyubdkghghgjhgjhgjhghjgjhgjghjghjggyuytyuhgjhgjhghjgjhgjghjghjggyuytyutyutyutyutyutyutyutyutyutyujlgbjkfdgbjkdfgljkfdkgljbdfj"
                    android:textStyle="normal"
                    android:textColor="#000"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight=".5"
                    android:weightSum="1"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight=".5"
                        android:layout_marginTop="@dimen/activity_horizontal_margin_double_half"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Quality"
                            android:gravity="left"
                            android:textSize="12sp"
                            android:textStyle="normal"
                            android:textColor="#000"/>

                        <RatingBar
                            android:id="@+id/qua_rating"
                            style="?android:attr/ratingBarStyleSmall"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:numStars="5"
                            android:rating="5"
                            android:stepSize="1"
                            android:theme="@style/RatingBar" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight=".5"
                        android:weightSum="1"
                        android:layout_marginTop="@dimen/activity_horizontal_margin_double_half"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Delivery"
                            android:textSize="12dp"
                            android:layout_gravity="left"
                            android:textStyle="normal"
                            android:textColor="#000"/>

                        <RatingBar
                            android:id="@+id/delvrt_rating"
                            style="?android:attr/ratingBarStyleSmall"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:numStars="5"
                            android:rating="5"
                            android:stepSize="1"
                            android:theme="@style/RatingBar" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight=".2"
                    android:weightSum="1"
                    android:gravity="right"
                    android:layout_marginTop="@dimen/activity_horizontal_margin_double_half"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/r_date"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="28-07-2017"
                        android:textStyle="normal"
                        android:textSize="12sp"
                        android:textColor="#000"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        tools:text="at"
                        android:textColor="#000"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin_double_half"
                        android:layout_marginRight="@dimen/activity_horizontal_margin_double_half"
                        android:textStyle="normal"/>

                    <TextView
                        android:id="@+id/r_time"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        tools:text="7:15 pm"
                        android:textColor="#000"
                        android:textSize="12sp"
                        android:textStyle="normal"/>

                </LinearLayout>


            </LinearLayout>


    </LinearLayout>

</LinearLayout>