<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical"
    tools:context="com.doomshell.karibu.TabInfo">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/time_title"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="Delivery times"
            android:layout_marginLeft="@dimen/activity_horizontal_margin_double_half"
            android:textColor="#000"
            android:layout_weight=".1"
            android:textSize="20sp"
            android:textStyle="bold" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycle_time"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="@dimen/activity_horizontal_margin_half"
            android:layout_weight=".5">

        </android.support.v7.widget.RecyclerView>

        <TextView
            android:id="@+id/payment_title"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="@dimen/activity_horizontal_margin_double_half"
            android:layout_weight=".1"
            android:textColor="#000"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="Payment methods" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycle_payment"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="@dimen/activity_horizontal_margin_half"
            android:layout_weight=".3">

        </android.support.v7.widget.RecyclerView>

    </LinearLayout>

</LinearLayout>
