<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/meal_back"
    tools:context="com.doomshell.karibu.Edit_profile"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/activity_horizontal_margin">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardBackgroundColor="#b0ffffff"
                app:cardCornerRadius="@dimen/activity_horizontal_margin"
                app:cardElevation="@null">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingTop="@dimen/activity_horizontal_margin_double_half">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingLeft="2dp"
                        android:paddingRight="2dp">

                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textColorHint="@color/Basecolorbtn">

                            <EditText
                                android:id="@+id/edit_fname"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:enabled="true"
                                android:focusable="true"
                                android:fontFamily="sans-serif"
                                android:hint="First Name"
                                android:lineSpacingExtra="0sp"
                                android:paddingLeft="10dp"
                                android:paddingTop="1dp"
                                android:singleLine="true"
                                android:textColorHint="@color/Basecolorbtn"
                                android:textSize="11.7sp" />
                        </android.support.design.widget.TextInputLayout>
                    </LinearLayout><!--

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingLeft="2dp"
                        android:paddingRight="2dp"
                        android:paddingTop="@dimen/activity_horizontal_margin_half">

                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textColorHint="@color/Basecolorbtn">

                            <EditText
                                android:id="@+id/edit_lname"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:fontFamily="sans-serif"
                                android:hint="Last Name"
                                android:lineSpacingExtra="0sp"
                                android:paddingLeft="10dp"
                                android:paddingTop="1dp"
                                android:singleLine="true"
                                android:textColorHint="@color/Basecolorbtn"
                                android:textSize="11.7sp" />
                        </android.support.design.widget.TextInputLayout>
                    </LinearLayout>-->

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingLeft="2dp"
                        android:paddingRight="2dp"
                        android:paddingTop="@dimen/activity_horizontal_margin_half">

                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textColorHint="@color/Basecolorbtn">

                            <EditText
                                android:id="@+id/edit_mobno"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:fontFamily="sans-serif"
                                android:hint="Mobile"
                                android:lineSpacingExtra="0sp"
                                android:paddingLeft="10dp"
                                android:paddingTop="1dp"
                                android:singleLine="true"
                                android:textColorHint="@color/Basecolorbtn"
                                android:textSize="11.7sp" />
                        </android.support.design.widget.TextInputLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal"
                        android:paddingLeft="4dp"
                        android:paddingRight="4dp">

                        <Button
                            android:id="@+id/save_details"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/activity_horizontal_margin"
                            android:layout_marginBottom="8dip"
                            android:layout_marginTop="8dip"
                            android:background="@color/Basecolorbtn"
                            android:fontFamily="sans-serif-thin"
                            android:lineSpacingExtra="0sp"
                            android:text="Save"
                            android:textColor="#fff"
                            android:textColorHint="#989898"
                            android:textStyle="bold" />

                    </LinearLayout>

                </LinearLayout>
            </android.support.v7.widget.CardView>

        </LinearLayout>
    </ScrollView>
</FrameLayout>
